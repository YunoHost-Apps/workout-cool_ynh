# Database Configuration
#POSTGRES_USER=username
#POSTGRES_PASSWORD=password
#POSTGRES_DB=workout-cool
#DB_HOST=localhost
#DB_PORT=5432
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://__DB_USER__:__DB_PWD__@:5432/__DB_NAME__

# Authentication
# The URL where your application is running
BETTER_AUTH_URL="https://__DOMAIN__"
# Generate a secure random string using: openssl rand -base64 32
BETTER_AUTH_SECRET="__KEY__"

# Google OAuth
# Get these from Google Cloud Console: https://console.cloud.google.com
# Required scopes: email, profile
#GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
#GOOGLE_CLIENT_SECRET="your-google-client-secret"

# OpenPanel Integration
# Get these from your OpenPanel dashboard
#OPENPANEL_SECRET_KEY=
#NEXT_PUBLIC_OPENPANEL_CLIENT_ID=

# Environment
# Options: development, production, test
NODE_ENV="production"

#SMTP Configuration
# Using MailHog for example. https://github.com/mailhog/MailHog
SMTP_HOST=__DOMAIN__
SMTP_PORT=587
SMTP_USER=__APP__
SMTP_PASS=__MAIL_PWD__
SMTP_FROM="Workout Cool <__APP__@__DOMAIN__>"
SMTP_SECURE=true

# Whether to seed sample data on startup
SEED_SAMPLE_DATA=false

